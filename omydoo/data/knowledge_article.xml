<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data noupdate="1">

        <record id="knowledge_article_dev_space" model="knowledge.article">
            <field name="icon">👨‍💻</field>
            <field name="name">Développement</field>
            <field name="is_article_visible_by_everyone" eval="True"/>
            <field name="parent_id" eval="False" />
            <field name="internal_permission">write</field>
        </record>
    
        <record id="knowledge_article_dev_workflow" model="knowledge.article">
            <field name="icon">👨‍💻</field>
            <field name="name">Workflow travail</field>
            <field name="parent_id" ref="omydoo.knowledge_article_dev_space"/>
            <field name="is_article_visible_by_everyone" eval="True"/>
            <field name="body" type="html">
                <h1>
                    <span style="font-weight: bolder;">
                        <font class="text-o-color-2">Workflow de travail</font>
                    </span>
                </h1>
                <hr />
             </field>
            <field name="internal_permission">write</field>
        </record>
    
    </data>
    
</odoo>
