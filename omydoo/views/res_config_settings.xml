<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="omd_project_res_config_settings_view_form_inherit" model="ir.ui.view">
        <field name="name">omd_project_res_config_settings_view_form_inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='tasks_management']" position="inside">
                <setting>
                    <field name="testing_project_coefficient" class="w-auto ps-1 fw-bold"
                        widget='percentage' />
                </setting>

            </xpath>
        </field>
    </record>

</odoo>